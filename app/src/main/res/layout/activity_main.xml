<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- 连接配置区域 -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Broker 地址"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/broker_url_input"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="tcp://broker.emqx.io:1883"
                android:inputType="text"
                android:textSize="12sp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:background="@drawable/edit_text_bg"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="客户端 ID"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/client_id_input"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="android_client"
                android:inputType="text"
                android:textSize="12sp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:background="@drawable/edit_text_bg"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:spacing="8dp">

                <Button
                    android:id="@+id/connect_button"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="连接"
                    android:textColor="@android:color/white"
                    android:backgroundTint="#4CAF50"
                    android:layout_marginEnd="4dp" />

                <Button
                    android:id="@+id/disconnect_button"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="断开"
                    android:textColor="@android:color/white"
                    android:backgroundTint="#F44336" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- 消息收发区域 -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="主题 (Topic)"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/topic_input"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="test/topic"
                android:inputType="text"
                android:textSize="12sp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:background="@drawable/edit_text_bg"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:spacing="8dp">

                <Button
                    android:id="@+id/subscribe_button"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="订阅"
                    android:textColor="@android:color/white"
                    android:backgroundTint="#2196F3"
                    android:layout_marginEnd="4dp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="消息"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/message_input"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="输入要发送的消息"
                android:inputType="text"
                android:gravity="top|start"
                android:textSize="12sp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="8dp"
                android:background="@drawable/edit_text_bg"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/publish_button"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="发送"
                android:textColor="@android:color/white"
                android:backgroundTint="#FF9800" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- 日志显示区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="日志"
                android:textStyle="bold"
                android:textSize="16sp" />

            <Button
                android:id="@+id/clear_log_button"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="清空"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:backgroundTint="#9C27B0" />

        </LinearLayout>

        <ScrollView
            android:id="@+id/log_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F5F5F5"
            android:padding="8dp">

            <TextView
                android:id="@+id/log_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="#333333"
                android:fontFamily="monospace" />

        </ScrollView>

    </LinearLayout>

</LinearLayout>